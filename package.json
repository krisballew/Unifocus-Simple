{
  "name": "unifocus-simple",
  "version": "1.0.0",
  "private": true,
  "description": "Production-ready PNPM workspace monorepo",
  "scripts": {
    "dev": "pnpm --parallel --stream run dev",
    "build": "pnpm --recursive --stream run build",
    "test": "pnpm --recursive --stream run test",
    "lint": "pnpm --recursive --stream run lint",
    "typecheck": "pnpm --recursive --stream run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "clean": "pnpm --recursive --parallel run clean && rm -rf node_modules",
    "prepare": "husky",
    "validate:env": "tsx scripts/validate-env.ts",
    "validate:env:web": "WEB_ENV=true tsx scripts/validate-env.ts",
    "deps:start": "./scripts/start-deps.sh",
    "deps:stop": "./scripts/stop-deps.sh",
    "db:migrate": "./scripts/migrate.sh",
    "db:reset": "./scripts/reset-db.sh",
    "startup": "./scripts/startup.sh",
    "restart": "pkill -f 'pnpm dev' || true && sleep 2 && pnpm startup"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.7",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1",
  "dependencies": {
    "openai": "^6.17.0"
  }
}
