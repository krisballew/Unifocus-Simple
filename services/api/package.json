    "fastify": "^5.7.4",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "^6.1.0",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "tap": "^21.5.0",
    "tsx": "^4.21.0",
    "vitest": "^1.2.1"
