{
  "name": "@unifocus/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx ../../scripts/validate-env.ts && tsx watch src/index.ts",
    "build": "tsc",
    "start": "tsx ../../scripts/validate-env.ts && node dist/index.js",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test": "tap",
    "test:watch": "tap --watch",
    "test:setup": "./scripts/setup-test-db.sh",
    "verify:security": "node ../../scripts/verify-security.js",
    "clean": "rm -rf dist .turbo node_modules",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.982.0",
    "@fastify/cors": "^11.2.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.5",
    "@prisma/client": "^5.22.0",
    "@unifocus/contracts": "workspace:*",
    "@unifocus/i18n": "workspace:*",
    "bcryptjs": "^3.0.3",
    "fastify": "^5.7.4",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "^6.1.0",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.3",
    "node-cache": "^5.1.2",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.5",
    "prisma": "5",
    "tap": "^21.5.0",
    "tsx": "^4.21.0",
    "vitest": "^1.2.1"
  }
}
