# API Environment Variables
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://unifocus:unifocus_dev_password@localhost:5432/unifocus_dev

# Redis
REDIS_URL=redis://:unifocus_dev_redis@localhost:6379

# Security
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000
# Cognito / Auth
COGNITO_REGION=us-east-1
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxx
COGNITO_ISSUER=https://cognito-idp.us-east-1.amazonaws.com/us-east-1_xxxxxxxxx
COGNITO_JWKS_URI=https://cognito-idp.us-east-1.amazonaws.com/us-east-1_xxxxxxxxx/.well-known/jwks.json

# Auth Token (optional, for local dev without Cognito)
AUTH_SKIP_VERIFICATION=false

# AWS SES Email Configuration
# Set USE_REAL_EMAIL=true to enable real email delivery via AWS SES
USE_REAL_EMAIL=false
FROM_EMAIL=noreply@unifocus.com
AWS_SES_REGION=us-east-1

# Email URLs (customize for your environment)
WEB_LOGIN_URL=https://app.unifocus.com/login
MOBILE_IOS_URL=https://apps.apple.com/app/unifocus
MOBILE_ANDROID_URL=https://play.google.com/store/apps/details?id=com.unifocus
